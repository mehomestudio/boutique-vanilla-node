<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous" defer></script>
        <link rel="stylesheet" href="<%- pathRoot %>/css/index.css" />
        <script src="<%- pathRoot %>/js/index.js" type="text/javascript" defer></script>
        <title>Boutique Vanilla - <%- titlePage %></title>
    </head>

    <body>
        <header>
            <%- include('topbar.ejs') %>
        </header>
        <div class="container-body position-relative">
            <div class="d-flex flex-column align-content-center align-items-center position-absolute w-100" data-alert>
            <% if (flashes && flashes.length) { %>
                <% for(const flash of flashes) { %>
                    <div class="d-flex flex-row align-items-center container alert alert-<%- flash.type %> m-1" data-alert-item>
                        <div class="d-flex flex-fill justify-content-center"><%- flash.message %></div>
                        <div class="d-flex" data-alert-close><i class="fa fa-times"></i></div>
                    </div>
                <% } %>
            <% } %>
            </div>
